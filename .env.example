# Telegram Bot Configuration - Multiple tokens for better rate limits
# Use comma-separated bot tokens (recommended: 3-5 bots)
TELEGRAM_BOT_TOKENS=bot1_token,bot2_token,bot3_token,bot4_token,bot5_token

# For backward compatibility, single bot token still works
# TELEGRAM_BOT_TOKEN=your_single_bot_token_here

# Telegram Channels (comma-separated channel IDs or usernames)
# You can use channel IDs like -1001234567890 or usernames like @mychannel
TELEGRAM_CHANNELS=@movies_channel,@series_channel,-1001234567890

# Server Configuration
PORT=3000

# Rate Limiting Configuration
RATE_LIMIT_DELAY=1000                    # Milliseconds between requests per bot
MAX_REQUESTS_PER_BOT_PER_MINUTE=20       # Telegram allows ~30/min, using 20 for safety
RETRY_ATTEMPTS=3                         # Number of retry attempts on failure
RETRY_DELAY=2000                         # Milliseconds to wait between retries

# Optional: Proxy settings (if needed for your region)
# HTTP_PROXY=http://proxy:port
# HTTPS_PROXY=https://proxy:port

# Cache settings (optional)
CACHE_TTL=3600000
